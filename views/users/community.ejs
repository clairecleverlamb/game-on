<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Community - Game On Sports Connect</title>
</head>
<body>
    <%- include('../partials/header') %>
    <%- include('../partials/subheader', { pageTitle: 'Community', backLink: '/users' }) %>
    <%- include('../partials/sidebar') %>

    <div class="community-container">
        <h1>Community</h1>
        <% if (users && users.length > 0) { %>
            <ul class="user-list">
                <% users.forEach(user => { %>
                    <li class="user-item">
                        <% if (user.profilePicture) { %>
                            <img src="<%= user.profilePicture %>" alt="<%= user.username %>'s Profile Picture" width="50" height="50">
                        <% } else { %>
                            <img src="/assets/default-profile.png" alt="Default Profile Picture" width="50" height="50">
                        <% } %>
                        <div class="user-info">
                            <h3><a href="/users/<%= user._id %>"><%= user.username %></a></h3>
                            <p><strong>Full Name:</strong> <%= user.fullName || 'Not set' %></p>
                            <p><strong>Location:</strong> <%= user.location || 'Not set' %></p>
                        </div>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No users found in the community.</p>
        <% } %>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>