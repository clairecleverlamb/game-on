<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title><%= game.sport %> - Game On</title>
</head>

<body>
    <%- include('../partials/header') %>
    <%- include('../partials/subheader', { pageTitle: game.sport, backLink: '/games' }) %>
    <%- include('../partials/sidebar') %>
    <div class="game-container">
    <h1><%= game.sport %></h1>
    <% if (game.completed) { %>
        <p style="color: red;">This game has ended.</p>
    <% } else if (game.participants.length >= game.maxPlayers) { %>
        <p style="color: orange;">This game is full.</p>
    <% } %>
    <p>
        <strong>Location:</strong><%= game.location %>
    </p>
    <p>
        <strong>Time:</strong><%= game.time.toLocaleString() %>
    </p>
    <p><strong>Skill Level:</strong>
        <%= game.skillLevel %>
    </p>
    <p><strong>Max Players:</strong>
        <%= game.maxPlayers %>
    </p>
    <p><strong>Status:</strong>
        <%= game.status %>
    </p>
    <p><strong>Description:</strong>
        <%= game.description || 'No description provided.' %>
    </p>
    <p><strong>Creator:</strong>
        <%= game.creator.username %>
    </p>
    <p><strong>Participants:</strong>
        <%= game.participants.map(p=> p.username).join(', ') %>
    </p>
    <% if (game.winner) { %>
        <p><strong>Winner:</strong> <%= game.winner.username %></p>
      <% } %>

    <% if (user && !game.participants.some(p=> p._id.toString() === user._id.toString()) && game.participants.length
    < game.maxPlayers && game.status==='Open' ) { %>
        <form action="/games/<%= game._id %>/join" method="POST">
          <button type="submit">Join Game</button>
        </form>
    <% } %>

    <% if (user && game.participants.some(p => p._id.toString() === user._id.toString()) && game.creator._id.toString() !== user._id.toString()) { %>
        <form action="/games/<%= game._id %>/leave" method="POST">
          <button type="submit">Leave Game</button>
        </form>
    <% } %>

    <% if (user && game.creator._id.toString()===user._id.toString()) { %>
        <a href="/games/<%= game._id %>/edit">Edit</a>
        <form action="/games/<%= game._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
        </form>
        <% if (!game.winner && game.time < new Date()) { %>
          <form action="/games/<%= game._id %>/set-winner" method="POST">
            <label for="winnerId">Select Winner:</label>
            <select name="winnerId" required>
              <% game.participants.forEach(participant => { %>
                <option value="<%= participant._id %>"><%= participant.username %></option>
              <% }) %>
            </select>
            <button type="submit">Set Winner</button>
          </form>
        <% } %>
    <% } %>
    <%- include('../partials/weather', { location: game.location }) %>
    </div>
    <%- include('../partials/calendar') %>
    <%- include('../partials/footer') %>
</body>
</html>